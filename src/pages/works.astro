---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import WorkCategory from '@/components/WorkCategory.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects, getProjectsByCategory } from '@/lib/data-utils'

const PREVIEW_COUNT = 3

const allProjects = await getAllProjects()
const allCyberSec = await getProjectsByCategory('cybersec')
const allResearch = await getProjectsByCategory('research')
// const allWritings = await getAllWritings()

const previewProjects = allProjects.slice(0, PREVIEW_COUNT)
const previewCyberSec = allCyberSec.slice(0, PREVIEW_COUNT)
const previewResearch = allResearch.slice(0, PREVIEW_COUNT)

const hasMoreProjects = allProjects.length > PREVIEW_COUNT
const hasMoreCyberSec = allCyberSec.length > PREVIEW_COUNT
const hasMoreResearch = allResearch.length > PREVIEW_COUNT
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Works" />
  <Breadcrumbs
    items={[{ label: 'Works', icon: 'lucide:gallery-vertical-end' }]}
  />

  <section>
    <div class="min-w-full">
      <div class="prose mb-8">
        <p class="mt-0">Some of the works that I've done...</p>
      </div>

      <!-- Projects Section -->
      <div class="mb-12">
        <div class="mb-4 flex items-center justify-between">
          <h2 class="font-ss-tech text-2xl font-bold">All Projects</h2>
          {
            hasMoreProjects && (
              <a
                href="/works/projects/2"
                class="text-muted-foreground text-sm hover:underline"
              >
                View all â†’
              </a>
            )
          }
        </div>
        <div class="flex flex-col gap-4">
          {previewProjects.map((project) => <ProjectCard project={project} />)}
        </div>
      </div>
      <hr />

      <!-- Cyber Security Section -->
      <WorkCategory
        title="Cyber Security"
        projects={previewCyberSec}
        hasMoreProjects={hasMoreCyberSec}
        endpoint="cybersecurity"
      />

      <!-- Research Section -->
      <WorkCategory
        title="Writings & Research"
        projects={previewResearch}
        hasMoreProjects={hasMoreResearch}
        endpoint="writings-and-research"
      />
    </div>
  </section>
</Layout>
