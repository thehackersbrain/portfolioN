---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import PFCard from '@/components/PFCard.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getFeaturedProjects, getRecentPosts } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'

const blog = await getRecentPosts(SITE.featuredPostCount)
const projects = await getFeaturedProjects()

// Person Schema for homepage SEO
const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: SITE.title,
  url: SITE.href,
  description: SITE.description,
}

// Organization Schema
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: SITE.title,
  url: SITE.href,
  description: SITE.description,
}

// Website Schema
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: SITE.title,
  url: SITE.href,
  description: SITE.description,
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${SITE.href}/blog?q={search_term_string}`,
    },
    'query-input': 'required name=search_term_string',
  },
}
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />

  <!-- Schema Markup for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(organizationSchema)}
  />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-bold">Gaurav Raj</h3>
      <p class="text-muted-foreground text-sm">
        Security Researcher &amp; Software Engineer
      </p>
    </div>
    <div class="p-6 pt-0">
      <p class="text-muted-foreground mb-2 text-sm">
        Offensive Security Researcher & Software Engineer with 8+ years of
        open-source experience. Specialized in low-level systems programming
        (C/ASM/Rust), Linux internals, kernel development, and red team
        operations. Strong crossover between kernel engineering, cloud
        infrastructure, and full-stack development.
      </p>
    </div>
  </section>

  <section class="featured-projects">
    <h2 class="mb-3 text-2xl font-medium">Featured Projects</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {projects.map((project) => <PFCard project={project} />)}
    </div>
    <div class="mt-3 flex justify-end">
      <Link
        href="/works"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all projects <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>

  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-end">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>

  <section>
    <div
      class="flex flex-col items-center justify-between gap-4 rounded-xl border p-6 sm:flex-row sm:items-center sm:gap-6"
    >
      <div class="text-center sm:text-left">
        <h3 class="text-xl font-medium">Want to work together?</h3>
        <p class="text-muted-foreground mt-2 text-sm">
          Have question, project or want to collaborate? Feel free to reach out!
        </p>
      </div>
      <Link
        href="mailto:gaurav@thehackersbrain.xyz"
        class={buttonVariants({ variant: 'outline' }) +
          ' group shrink-0 inline-flex items-center gap-2'}
      >
        <Icon name="lucide:mail" class="size-4" />
        Contact Me
      </Link>
    </div>
  </section>
</Layout>
